n = int(input())
cont1 = 1
while cont1 <= n:
    num = input().split()
    x = int(num[0])
    y = int(num[1])
    soma = 0
    cont2 = 1
    while cont2 <= y:
        if x%2 ==0:
            soma = soma+x+1
            x = x+3
        else:
            soma = soma + x
            x = x + 2
        cont2 = cont2+1
    print(soma)
    cont1 = cont1+1

